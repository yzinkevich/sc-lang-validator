{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ES2016.Array.Include",
      "ES2015",
      "ES2017"
    ],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@mui/*": ["node_modules/@mui/*"],
      "@emotion/*": ["node_modules/@emotion/*"]
    },
    "outDir": "dist",
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/renderer/types"
    ],
    "types": ["electron", "node"]
  },
  "include": [
    "src/**/*",
    "node_modules/electron/electron.d.ts"
  ],
  "exclude": ["node_modules"]
} 